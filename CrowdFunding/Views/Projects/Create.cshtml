                     data: data,
                     success: function (location) {
                         //alert(location);
                         $("#imagePath2").val(location);

                         //console.log(location);
                         //$("#divId").append(location);
                         //

                     },
                     error: function () {
                         alert("There was error uploading files!");
                     }
                 });
             });




             $("#upload3").click(function (evt) {
                 var fileUpload = $("#files3").get(0);
                 var files = fileUpload.files;
                 var data = new FormData();
                 for (var i = 0; i < files.length; i++) {
                     data.append(files[i].name, files[i]);
                 }
                 $.ajax({
                     type: "POST",
                     url: "/home/UploadFilesAjax",
                     contentType: false,
                     processData: false,
                     data: data,
                     success: function (location) {
                         //alert(location);
                         $("#imagePath3").val(location);

                         //console.log(location);
                         //$("#divId").append(location);
                         //

                     },
                     error: function () {
                         alert("There was error uploading files!");
                     }
                 });
             });


         });

    </script>
}
