@model Project

@{
    ViewData["Title"] = "ProjectDashboard";

}

<div class="container">
    <div class="well media-middle">
        <h2>ProjectDashboard</h2>
    </div>
</div>
<hr />
<div class="container">
    <form class="form-horizontal" name="form" method="post" enctype="multipart/form-data" asp-action="ProjectDashboard">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />


        <div class="form-group">
            <label asp-for="Name" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Name" type="text" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectShortDescription" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="ProjectShortDescription" type="text" class="form-control" />
                <span asp-validation-for="ProjectShortDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectTitle" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="ProjectTitle" type="text" class="form-control" />
                <span asp-validation-for="ProjectTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IsRunning" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsRunning" /> @Html.DisplayNameFor(model => model.IsRunning)
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IsCompleted" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsCompleted" /> @Html.DisplayNameFor(model => model.IsCompleted)
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NeededFund" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="NeededFund" type="text" class="form-control" />
                <span asp-validation-for="NeededFund" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StartingDate" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="StartingDate" type="text" class="form-control" />
                <span asp-validation-for="StartingDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EndingDate" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="EndingDate" type="text" class="form-control" />
                <span asp-validation-for="EndingDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CompanyId" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="CompanyId" type="text" class="form-control" readonly />
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectCategoryId" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="ProjectCategoryId" type="text" class="form-control" />
                <span asp-validation-for="ProjectCategoryId" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label asp-for="Image1" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input id="files" type="file" name="files" multiple />
                <span asp-validation-for="Image1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DetailDescription" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <textarea asp-for="DetailDescription" type="text" class="form-control" style="height: 400px;"></textarea>
                <span asp-validation-for="DetailDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="VideoUrl" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <textarea asp-for="VideoUrl" type="text" class="form-control" style="height: 400px;"></textarea>
                <span asp-validation-for="VideoUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input type="submit" value="Update Project" id="btn btn-submit" class="btn btn-success btn-lg" />
            </div>
        </div>

    </form>
    <div class="form-group">
        <label class="control-label col-sm-2"></label>
        <div class="col-sm-10">
            <a href="/InvestmentTypes/CreateReward/@Model.Id" id="btn" class="btn btn-success btn-lg">Set Rewards</a>
        </div>
    </div>
    

    @*<div>
        <a asp-action="Index">Back to List</a>
    </div>*@


</div>

@section Scripts{
    <script>
        $('#btn-submit').on('click', function () {
            var inputFile = document.getElementById('files');
            var files = inputFile.files;
            var fdata = new FormData();
            
            for (var i = 0; i <= files.length; i++) {
                fdata.append("files", files[i]);
            }
            $.ajax({

                url: '/Projects/ProjectDashboard',
                data: fdata,
                processData: false,
                contentType: false,
                type: 'POST',
                success: function (data) {
                    alert("File upload.");
                }
            });
        }
        );
    </script>

}
